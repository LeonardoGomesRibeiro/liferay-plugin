<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE service-builder PUBLIC
"-//Liferay//DTD Service Builder 6.0.0//EN" 
"http://www.liferay.com/dtd/liferay-service-builder_6_0_0.dtd">

<service-builder package-path="com.liferay.mobilephones">
	<author>Leonardo Ribeiro</author>
	<namespace>MB</namespace>
	
	<!-- Entity mobile phone. -->
	<entity name="MBMobilePhone" local-service="true" remote-service="false">
		<column name="id" type="long" primary="true"></column>
		<column name="name" type="String"></column>
		<column name="brand" type="String"></column>
		<column name="description" type="String"></column>
		<column name="releaseDate" type="Date"></column>
		<column name="price" type="double"></column>
		
	</entity>
</service-builder>